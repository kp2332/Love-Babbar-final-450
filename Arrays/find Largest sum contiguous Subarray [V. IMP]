class Solution{
    public:
    // arr: input array
    // n: size of array
    //Function to find the sum of contiguous subarray with maximum sum.
    long long maxSubarraySum(int arr[], int n){
        
        // Your code here
        long long sum=0;
        for(int i=0;i<n;i++){
            if(sum>=0){
            sum=sum+arr[i];
                
            }
        else{
            sort(arr,arr+n);
            sum=arr[n-1];
            }
        }
        
   return sum ; }
};

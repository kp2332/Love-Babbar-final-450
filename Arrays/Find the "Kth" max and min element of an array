#include<bits/stdc++.h>
using namespace std;
int kthSmallest(int arr[], int l, int r, int k)
    {
      int ans;
      sort(arr,arr+r+1);
      for (int i =l; i <= r; i++)
      {
        return arr[k-1];
      }
      
    }
int main()
{
    int arr[]={7, 10, 4, 20, 15};
    cout<<kthSmallest(arr,0,4,4);
        
    return 0;
}
